exec.start = "/bin/sh /etc/rc";
exec.stop = "/bin/sh /etc/rc.shutdown";
exec.clean = true;
mount.devfs = true;

squid {
  host.hostname="squid.local";
  ip4.addr="{{ jail_bridge_subnet }}.{{ squid_ip }}";
  path="/jailhome/squid";
}

dns {
  host.hostname="dns.local";
  ip4.addr="{{ jail_bridge_subnet }}.{{ dns_ip }}";
  path="/jailhome/dns";
}

www {
  host.hostname="www.local";
  ip4.addr="{{ jail_bridge_subnet }}.{{ www_ip }}";
  path="/jailhome/www";
}

cal {
  host.hostname="cal.local";
  ip4.addr="{{ jail_bridge_subnet }}.{{ cal_ip }}";
  path="/jailhome/cal";
}
