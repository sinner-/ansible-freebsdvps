events {
    worker_connections 1024;
}
http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;

    server {
        listen       80;
        server_name  _;

        location / {
            root /usr/local/www/sina.id.au;
        }

        if ( $query_string ~ "q") { set $cgit_search_access 0; }
        if ( $remote_addr ~ 10.8.0. ) { set $cgit_search_access 1; }

        location /git {
            if ( $cgit_search_access = 0 ) { return 403; }
            gzip off;
            alias /usr/local/www/cgit;
            try_files $uri @cgit;
        }

        location @cgit {
            fastcgi_pass unix:/var/run/fcgiwrap/cgit.sock;
            fastcgi_split_path_info ^(/git)(/?.+)$;
            fastcgi_param SCRIPT_NAME /cgit.cgi$fastcgi_path_info;
            fastcgi_param DOCUMENT_ROOT /usr/local/www/cgit;
        }

    }

    server {
        listen       80;
        server_name  paste.sina.id.au;

        location / {
            proxy_pass http://{{ jail_bridge_subnet }}.{{ www_ip }}:8080/;
        }
    }

}
